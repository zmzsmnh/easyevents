<!DOCTYPE html>
<html>
<head>
    <title>EasyEvents - Events for fun</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css" />
    <link rel="stylesheet" type="text/css" href="http://dev.jtsage.com/cdn/datebox/latest/jqm-datebox.min.css" />
    <link rel='stylesheet' href='/css/style.css' />

    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>
    <!--<script type="text/javascript" src="/js/jquery.mousewheel.min.js"></script>-->

    <!--<script type="text/javascript" src="http://dev.jtsage.com/cdn/datebox/latest/jquery.mobile.datebox.min.js"></script>-->
    <script type="text/javascript" src="http://dev.jtsage.com/cdn/datebox/latest/jqm-datebox.core.min.js"></script>
    <script type="text/javascript" src="http://dev.jtsage.com/cdn/datebox/latest/jqm-datebox.mode.flipbox.min.js"></script>
    <!--<script type="text/javascript" src="http://dev.jtsage.com/cdn/datebox/i18n/jquery.mobile.datebox.i18n.en_US.utf8.js"></script>-->
    <script type="text/javascript" src="/js/events.js"></script>
</head>

<body>
<div data-role="page">
    <a id="a_zip_dialog" href="zipcode.html" data-rel="dialog"  data-transition="flip" class="hide">Open dialog</a>
    <div data-role="header">
        <a id="a_left" href="#" data-icon="arrow-l">Home</a>
        <h1>Easy Events</h1>
        <a id="a_right" href="#" data-icon="plus" data-theme="b" class="add">Add</a>
    </div>
    <div id="div_events" data-role="content">
        <div class="block list">
            <ul id="e_events" data-role="listview" data-inset="true">
            </ul>
        </div>
        <div class="block form step1 hide">
            <label for="e_name">Name:</label>
            <input type="text" name="e_name" id="e_name" value="">
            <label class="ui-input-text" for="e_startdate">Start Date:</label>
           <div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-c">
                <input name="e_startdate" id="e_startdate" type="date" data-role="datebox"
                       data-options='{"mode":"flipbox", "useNewStyle": true}'
                       class="ui-input-text ui-body-d ui-corner-all ui-icon-datebox">
            </div>
            <label class="ui-input-text" for="e_starttime">Start Time:</label>
            <div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-c">
                <input name="e_starttime" id="e_starttime" type="text" data-role="datebox"
                       data-options='{"mode":"timeflipbox", "useNewStyle": true}'
                       class="ui-input-text ui-body-d ui-corner-all ui-icon-datebox">
            </div>
            <label class="ui-input-text" for="e_enddate">End Date:</label>
            <div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-c">
                <input name="e_enddate" id="e_enddate" type="date" data-role="datebox"
                       data-options='{"mode":"flipbox", "useNewStyle": true}'
                       class="ui-input-text ui-body-d ui-corner-all ui-icon-datebox">
            </div>
            <label class="ui-input-text" for="e_endtime">End Time:</label>
            <div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-c">
                <input name="e_endtime" id="e_endtime" type="text" data-role="datebox"
                       data-options='{"mode":"timeflipbox", "useNewStyle": true}'
                       class="ui-input-text ui-body-d ui-corner-all ui-icon-datebox">
            </div>
        </div>
        <div class="block form step2 hide">
            <label class="ui-input-text" for="e_place">Add Places:</label>
            <ul id="e_place" data-role="listview" data-filter="true" data-inset="true" data-filter-reveal="true" data-filter-placeholder="Search places...">
            </ul>
            <ol data-role="listview" id="list_places" data-inset="true">
            </ol>
        </div>
        <div class="block form step3 hide">
            <label class="ui-input-text" for="e_participants">Add Participants:</label>
            <ul id="e_participants" data-role="listview" data-filter="true" data-inset="true" data-filter-reveal="true" data-filter-placeholder="Search users by name...">
            </ul>
            <ol data-role="listview" id="list_participants" data-inset="true">
            </ol>
        </div>

        <div class="block detail hide">
            <h2 id="ed_name"></h2>
            <p id="ed_description"></p>
            <label id="ed_places"></label>
        </div>

        <div class="block claim hide">
            <label for="c_des">Description:</label>
            <input type="text" name="c_des" id="c_des" value="">
            <label for="c_amount">Total Expense Amount($):</label>
            <input type="number" name="c_amount" id="c_amount" value="">
            <form>
                <fieldset data-role="controlgroup" id="c_participants">
                    <legend>Participants:</legend>
                </fieldset>
            </form>

        </div>

        <div class="block check hide">
            <ul id="c_list" data-role="listview" data-inset="true">
            </ul>
        </div>
    </div><!-- /content -->
    <div data-role="footer">
        <div data-role="navbar" data-iconpos="bottom" data-id="foo1" data-position="fixed">
            <ul>
                <li id="li_ev"><a href="#" data-icon="grid" class="ui-btn-active ui-state-persist">Events</a></li>
                <li id="li_cl"><a href="#" data-icon="home">Claims</a></li>
                <li id="li_ex"><a href="#" data-icon="home">Expenses</a></li>
            </ul>
        </div><!-- /navbar -->
    </div><!-- /footer -->
</div>
</body>
</html>